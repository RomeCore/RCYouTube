<rc_pbs:PlayableSubControl x:Class="RCYouTube.YouTubeTrackSubControl"
						   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
						   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"         
						   xmlns:rc_pbs="clr-namespace:RCAudioPlayer.WPF.Playables.Sub;assembly=RCAudioPlayer.WPF"
						   mc:Ignorable="d" 
						   d:DesignHeight="60" d:DesignWidth="400">
	<DockPanel LastChildFill="True">

		<Image x:Name="thumbnail" DockPanel.Dock="Left" Height="60" HorizontalAlignment="Left"/>

		<Grid DockPanel.Dock="Left" Margin="5">

			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>

			<TextBlock Grid.Row="0" x:Name="titleText" VerticalAlignment="Center" FontSize="16"/>

			<TextBlock Grid.Row="1" x:Name="authorText" VerticalAlignment="Center" FontSize="12"/>

		</Grid>

	</DockPanel>
</rc_pbs:PlayableSubControl>